<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/menutem"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:id="@+id/user_img"
                android:src="@drawable/home"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/photooflistviewofnews" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="salam"
                    android:id="@+id/tarixS"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="40dp"
                    android:layout_toLeftOf="@id/user_img"
                    android:textDirection="ltr"
                    android:layout_marginTop="9dp"
                    android:textColor="#3377ff"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/user_img"
                    android:textDirection="rtl"
                    android:textColor="#ff1a1a"
                    android:id="@+id/TiTLELELE"
                    android:text="salam"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="rtl"
            android:textColor="#000"
            android:lines="3"
            android:maxLines="2"
            android:maxLength="200"
            android:id="@+id/matn"
            android:layout_margin="10dp"
            android:text="salam"
            android:textSize="16dp"
            />
    </LinearLayout>

</LinearLayout>