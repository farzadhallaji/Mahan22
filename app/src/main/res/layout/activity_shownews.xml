<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    android:background="@drawable/bfdfer"
    android:baselineAligned="false"
    android:id="@+id/lay2"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/toolbar2"
        android:background="#e3010f"
        android:layout_weight="27"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="right">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/dfdfd"
                android:src="@drawable/searchchch"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:text="گروه آموزشی ماهان"
                    android:textColor="#ffffff"
                    android:textSize="20dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/menuButton"
                android:src="@drawable/ic_menu_white"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layoutDirection="rtl">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="15dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/fav"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:id="@+id/likefav" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sdsdsd"
                    android:textColor="#3377ff"
                    android:gravity="center|left"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="50dp"
                    android:id="@+id/teriks"
                    />
                <TextView
                    android:textColor="#ff1a1a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tutle"
                    android:layout_below="@+id/teriks"
                    android:text="dsdsssssss"
                    android:gravity="right"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="115dp"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ProgressBar
                    android:id="@+id/myProgress"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:progress="@integer/google_play_services_version"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />
                <!--<TextView
                    android:id="@+id/myTextProgress"
                    android:text="لطفا منتظر بمانید"
                    android:textColor="#cc0066"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:layout_marginTop="30dp"
                    android:layout_alignLeft="@id/myProgress"
                    android:layout_alignTop="@id/myProgress"
                    android:layout_alignRight="@id/myProgress"
                    android:layout_alignBottom="@id/myProgress"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:scrollbars = "vertical"
                    android:id="@+id/textviewmiu"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="50dp"
                    android:id="@+id/sesese"
                    android:layout_below="@+id/textviewmiu">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="نظری برای نمایش وجود ندارد"
                        />
                </RelativeLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_below="@id/sesese"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:id="@+id/nazar"
                    android:text="افزودن نظر"
                    android:layout_marginBottom="60dp"
                    android:background="#e3010f"
                    android:textColor="#fff"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>