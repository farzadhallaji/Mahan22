<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="750dp"
    android:layout_gravity="center"
    android:background="@drawable/rounded_of_spinner_layout"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.5" >




        </LinearLayout>
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/colseBtn"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="90dp"
            android:text="بستن"
            android:textColor="#fff"
            android:layout_below="@+id/select"
            android:textSize="13dp"
            android:layout_gravity="left"
            style="?android:attr/borderlessButtonStyle">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لطفا نظرات خود را در کادر پائین وارد نمایئد."
            android:layout_gravity="center"
            android:id="@+id/select"
            android:layout_above="@+id/colseBtn"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="15dp"
            />


     <EditText
         android:layout_width="190dp"
         android:layout_height="100dp"
         android:background="#fff"
         android:layout_gravity="center"
         android:layout_marginTop="20dp"
         android:inputType="text"
         android:id="@+id/getcomment"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.7"
            android:orientation="vertical">



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="درج نظر"
                android:id="@+id/selectFromSpinner"
                android:textColor="#e03838"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                />






            <!-- <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="3" >



             </RelativeLayout>
 -->
        </LinearLayout>


    </LinearLayout>

</FrameLayout>
