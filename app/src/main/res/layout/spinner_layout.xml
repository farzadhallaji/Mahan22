<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="550dp"
    android:layout_height="850dp"
    tools:context="com.comtech.ali.mahan.MainActivity"
    android:layout_gravity="center"
    android:background="@drawable/rounded_of_spinner_layout"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.5" >




        </LinearLayout>
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/colseBtn"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="110dp"
            android:text="بستن"
            android:textColor="#fff"
            android:layout_below="@+id/select"
            android:textSize="13dp"

            android:layout_gravity="left"
            style="?android:attr/borderlessButtonStyle">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="یکی از گروه های زیر را انتخاب کنید :"
            android:layout_gravity="center"
            android:id="@+id/select"
            android:layout_above="@+id/colseBtn"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="18dp"
            />

        <ListView
            android:layout_height="100dp"
            android:layout_width="190dp"
            android:layout_gravity="center"
            android:layoutDirection="ltr"
            tools:listitem="@layout/item_markaz"
            android:id="@+id/expanded_menu"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_key"
            android:layout_marginRight="30dp"
            />
        <ProgressBar
            android:id="@+id/myProgress"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/expanded_menu"
            android:progress="@integer/google_play_services_version"
            android:layout_gravity="center"

            />


