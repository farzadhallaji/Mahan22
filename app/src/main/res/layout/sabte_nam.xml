<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#e03838"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/bg"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1.4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="نام و نام خانوادگی"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:id="@+id/neme"
                    />
                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/dededede"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/neme"
                    android:src="@drawable/dotline"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="شماره تلفن"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:layout_below="@id/dededede"
                    android:id="@+id/hele"
                    />
                <ImageView
                    android:id="@+id/ddoooo"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/hele"
                    android:src="@drawable/dotline"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="ایمیل"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:id="@+id/lele"
                    android:layout_below="@+id/ddoooo"
                    />
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/lele"
                    android:src="@drawable/dotline"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="سن"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:id="@+id/pppp" />
                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/frfr"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/pppp"
                    android:src="@drawable/dotline"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="شغل"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:id="@+id/popopopo"
                    android:layout_below="@+id/frfr"
                    />
                <ImageView
                    android:layout_width="200dp"
                    android:id="@+id/mmmm"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/popopopo"
                    android:src="@drawable/dotline"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3" >

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:text="ثبت نام"
                    android:textColor="#fff"
                    android:background="@drawable/gradient"
                    android:id="@+id/asadasasadsButton"
                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.7"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:id="@+id/progressbarsandaha"/>

    </LinearLayout>
</RelativeLayout>
