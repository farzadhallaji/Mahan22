<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    android:background="@drawable/bfdfer"
    android:baselineAligned="false"
    android:id="@+id/selem"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/toolbar2"
        android:background="#e3010f"
        android:layout_weight="27"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="right">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/backButton"
                android:src="@drawable/searchchch"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:text="گروه آموزشی ماهان"
                    android:textColor="#ffffff"
                    android:textSize="20dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/menuButton"
                android:src="@drawable/ic_menu_white"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:background="#fff"
            android:layout_marginBottom="120dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/myProgress"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="salam"
                    android:paddingLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#3377ff"
                    android:id="@+id/tarix"
                    android:textSize="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tarix"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="40dp"
                    android:gravity="right"
                    android:id="@+id/descriptionnnn"
                    android:textColor="#ff1a1a"
                    android:textSize="15dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/descriptionnnn"
                    android:id="@+id/lslslslsl"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp">

                    <VideoView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/movieninahsi"
                        android:background="@drawable/photooflistviewofnews"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon_play"
                        android:id="@+id/playimg"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/lslslslsl"
                    android:layout_marginTop="20dp"
                    android:id="@+id/ytytyy"
                    android:background="@drawable/menutem"
                    >

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="نظری برای نمایش وحود ندارد "
                        android:gravity="right"
                        android:layout_margin="15dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/naa"
                        />

                </RelativeLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="افزودن نظر"
                    android:layout_margin="20dp"
                    android:layout_below="@+id/ytytyy"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff"
                    android:background="#e3010f"
                    />
            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>